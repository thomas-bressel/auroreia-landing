# ==========================================
# PROJECT CONFIGURATION
# ==========================================
PROJECT_ID={{PROJECT_ID}}
PROJECT_NAME={{PROJECT_NAME}}
PUBLIC_URL=https://{{PROJECT_NAME}}.auroreia.fr

# ==========================================
# MYSQL SERVER (Container mysql-{{PROJECT_ID}})
# ==========================================

MYSQL_ROOT_PASSWORD={{MYSQL_ROOT_PASSWORD}}

MYSQL_USER={{MYSQL_USER}}
MYSQL_PASSWORD={{MYSQL_PASSWORD}}

MYSQL_DATABASE={{PROJECT_ID}}_users
USERDB_DATABASE_NAME={{PROJECT_ID}}_users
CONTENTDB_DATABASE_NAME={{PROJECT_ID}}_content

MYSQL_PORT={{MYSQL_PORT}}
MYSQL_INTERNAL_PORT=3306

# ==========================================
# REDIS SERVER (Container redis-{{PROJECT_ID}})
# ==========================================
REDIS_PASSWORD={{REDIS_PASSWORD}}
REDIS_PORT={{REDIS_PORT}}
REDIS_INTERNAL_PORT=6379
REDIS_EXPIRATION=3600

# ==========================================
# PHPMYADMIN (Container pma-{{PROJECT_ID}})
# ==========================================
PHPMYADMIN_WEB_PORT={{PMA_PORT}}
PHPMYADMIN_WEB_URL=http://localhost:{{PMA_PORT}}/

# ==========================================
# REDISINSIGHT (Container insight-{{PROJECT_ID}})
# ==========================================
REDISINSIGHT_PORT={{REDISINSIGHT_PORT}}
REDISINSIGHT_URL=http://localhost:{{REDISINSIGHT_PORT}}

# ==========================================
# FILEBROWSER
# ==========================================
FILEBROWSER_PORT={{FILEBROWSER_PORT}}

# ==========================================
# API CONFIGURATION
# ==========================================
DB_CONNECTION_LIMIT=100

CORS_ALLOWED_ORIGINS=https://drawer.auroreia.fr,https://{{PROJECT_NAME}}.auroreia.fr,http://localhost:4200
CORS_CREDENTIALS=true

# ==========================================
# DOCKER SERVICE NAMES (Internal network)
# ==========================================
MYSQL_SERVICE_NAME=mysql-{{PROJECT_ID}}
REDIS_SERVICE_NAME=redis-{{PROJECT_ID}}
NETWORK_NAME={{PROJECT_ID}}-net
